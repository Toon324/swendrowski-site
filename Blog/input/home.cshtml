<h2>Posts</h2>
@foreach(var doc in Documents["Posts"].OrderBy(x => x["Title"]))
{
	<div class="row">
        <div class="col-md-6">
            <div class="card blue-grey darken-1">
                <div class="card-content white-text">
                    <span class="card-title">@doc["Title"]</span>
                    <p>Published - @doc["Published"]</p>
                </div>
                <div class="card-action">
                    <a href="@doc["PostFile"]">Read More</a>
                </div>
            </div>
        </div>
    </div>
}