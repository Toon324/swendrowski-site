<div class="container offset-top">

    <h3>
        Posts for
        <span class="hide" data-category="salesforce">Salesforce</span>
        <span class="hide" data-category="csharp">C#</span>
        <span class="hide" data-category="general">General</span>
    </h3>
    @foreach (var doc in Documents["Posts"].OrderBy(x => x["Published"]))
    {
        <div class="col-sm-6 hide" data-category="@doc["Category"]">
            <div class="elegant-card z-depth-1 hoverable">
                <!-- Image wrapper -->
                <div class="card-up view overlay hm-white-slight">
                    <h5 class="card-label"> <span class="label rgba-black-light">@doc["Category"].ToString().Replace("csharp", "C#")</span></h5>
                    <a href="@doc["PostFile"]">
                        <img src="@doc["PromoImageUrl"]" class="img-responsive" alt="">
                        <div class="mask waves-effect waves-light"> </div>
                    </a>
                </div>
                <!-- Button -->
                <a class="btn-floating btn-large waves-effect waves-light stylish-color" href="@doc["PostFile"]"><i class="fa fa-chevron-right"></i></a>
                <!-- Content -->
                <div class="card-content grey lighten-5">
                    <h5>@doc["Title"].ToString().Replace("csharp", "C#")</h5>
                    <p>@doc["Intro"]</p>
                </div>
                <!-- Footer -->
                <div class="card-footer">
                    <ul class="list-inline">
                        <li><i class="fa fa-clock-o"></i>@doc["Published"].ToString("MM-dd-yy")</li>
                        <li><i class="fa fa-comments-o"></i><a href="@doc["PostFile"]#disqus_thread">0</a></li>
                    </ul>
                </div>
            </div>
        </div>
    }
</div>

<script>
    var category = urlParams["category"];

    $("div[data-category='" + category + "']").removeClass('hide');
    $("span[data-category='" + category + "']").removeClass('hide');
</script>
